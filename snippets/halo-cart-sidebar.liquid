        <div class="previewCartMessage">{% render 'free-shipping-component' %}</div>
      {%- endif -%}
      {% if settings.carrinho_progressivo or settings.ativar_brinde %}
      <div class="more-promotions">
        <div class="promotions-container">
          {% if settings.ativar_brinde %}
          <span class="open-popup-progress" data-progress="#progress-brinde">
