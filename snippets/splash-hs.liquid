<style>
  .splash-hs {
    position: fixed;
    height: 100vh;
    width: 100vw;
    background: #fff;
    top: 0;
    left: 0;
    z-index: 999;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    opacity: 1;
    transition: opacity 0.5s ease;
  }
  
  .background-reveal {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0);
    width: 250vw;
    height: 250vw;
    background: #00814e;
    border-radius: 50%;
    animation: revealAnimation 2.5s ease-out forwards;
    animation-delay: 0.5s;
  }

  @media (max-width: 1024px){
    .background-reveal {
      width: 200vh;
      height: 200vh;
    }
  }
  
  .logo-splash {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
  }
  
  .logo-splash svg{
    width: 70px;
    height: auto;
    stroke: none;
    z-index: 999;
  }
  
  @keyframes revealAnimation {
    0% {
      transform: translate(-50%, -50%) scale(0);
      opacity: 0;
    }
    100% {
      transform: translate(-50%, -50%) scale(1);
      opacity: 1;
    }
  }
  .splash-hs.ocultar{
    opacity: 0;
  }
</style>

