<script>
  var splash = localStorage.getItem("splash");
  var objeto = document.querySelector('.splash-hs');
  
  if(splash == "true" ){
    objeto.style.display = 'none';
  }else{
    objeto.style.display = '';
    document.addEventListener("DOMContentLoaded", function() {
        localStorage.setItem("splash", true);
        // Delay de 3 segundos.
        setTimeout(function() {
            
            objeto.classList.add('ocultar');
    
            // Aguarde o fim da animação e então altere o display para none.
            objeto.addEventListener('transitionend', function() {
                objeto.style.display = 'none';
            });
        }, 2500); // O delay é de 3 segundos.
    });
  }
</script>