<style>

  @media (min-width: 1024px){
    .slider-sabores-hs .header-widget h3{
      margin-bottom: 65px;
    }
  }
  
  .slider-sabores-hs .swiper-slide{
    width: 60%;
    height: auto;
  }

  .flip-card-sabor{
    transition: transform 0.6s;
    transform-style: preserve-3d;
    transform: translateZ(0);
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
    position: relative;
  }
  
  .slider-sabores-hs {
    padding: 40px 20px 60px 20px;
  }

  .sabor-item {
    text-align: center;
    background: var(--colorCard);
    padding: 20px;
    border-radius: 25px;
  }

  .card-sabor-header {
    margin-bottom: 10px;
  }

  .card-sabor-header h3 {
    margin: 0;
    font-weight: 400;
    font-size: 17px;
  }

  @media (max-width: 1024px){
    .card-sabor-header h3 {
      min-height: 48px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }

  .calorias-preview {
    display: flex;
    background: var(--colorFeature);
    border-radius: 9999px;
    justify-content: center;
    max-width: fit-content;
    padding: 5px 30px 8px 30px;
    margin: 0 auto;
    margin-bottom: -12px;
    gap: 5px;
  }

  .star-icon svg {
    fill: var(--colorFeature);
    stroke: none;
    width: 16px;
    height: 16px;
    margin-top: -5px;
  }

  span.qtd-kcal {
    font-size: 23px;
    line-height: 1;
    font-weight: 700;
    color: #fff;
  }

  span.medida-kcal span {
    font-size: 7px;
  }

  span.medida-kcal b {
    font-size: 8px
  }
  
  span.medida-kcal {
    display: flex;
    flex-direction: column;
    line-height: 1;
    text-align: left;
    color: #fff;
    justify-content: center;
  }
  
  .foto-sabor {
    margin: 0 -25px;
  }

  .foto-sabor img {
    width: 100%;
  }

  /*Avaliações*/
  .avaliacoes-sabor {
    display: flex;
    gap: 5px;    
    margin-top: 10px;
  }

  .total-avaliacoes {
    display: flex;
    flex-direction: column;
    text-align: left;
    line-height: 1;
    justify-content: center;
  }

  .media-avaliacao p {
    font-size: 23px;
    line-height: 1;
    font-weight: 700;
    margin: 0;
  }

  .avaliacoes-sabor {
    display: flex;
    gap: 5px;
    align-items: center;
    justify-content: center;
  }

  .conhecer-btn{
    font-size: 13px;
    font-weight: 400;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
    padding: 0;
  }

   @media (min-width: 800px) and (max-width: 1200px){
    .slider-sabores-hs .swiper-slide {
      width: 33%;
      height: auto;
    }
  }

  @media (min-width: 1200px){
    .slider-sabores-hs {
      padding: 40px 120px 60px 120px;
    }
  
    .slider-sabores-hs .swiper-slide {
      width: 26%;
      height: auto;
    }
  }

  /*Card Open*/
  
  .header-cart-open {
    display: flex;
    align-items: center;
    background: var(--colorCard);
    border-radius: 25px;
  }
  
  .cal-open-header {
    display: flex;
    flex-direction: column;
    line-height: 1;
    padding: 20px 35px 20px 20px;
    background: var(--colorFeature);
    border-radius: 25px;
    font-weight: 100;
    color: #fff;
  }

  .features-sabor-header {
    display: flex;
    gap: 10px;
    max-width: 175px;
  }
  
  span.kcal-number {
    font-size: 30px;
    font-weight: 600;
    color: #fff;
  }
  
  span.kcal-number + span {
    font-weight: 600;
  }

  .img-header-card img {
    height: 100%;
    width: 100%;
  }
  
  .img-header-card {
    max-width: 75px;
    width: auto;
    height: auto;
    margin-bottom: -30px;
    margin-top: -30px;
    margin-left: -20px;
  }

  .content-sabor {
    display: flex;
    flex-direction: column;
    line-height: 1.1;
    font-size: 9px;
    justify-content: center
  }

  .features-sabor-header {
    display: grid;
    gap: 10px;
    grid-template-columns: repeat(2, 1fr);
    padding: 10px 15px;
    align-items: center;
  }

  .feature-sabor-header {
    display: flex;
    gap: 5px;
  }

  .icon-sabor svg {
    stroke: none;
    width: 20px;
    height: auto;
  }

  .slider-sabores-hs.open-description-sabor .swiper-slide {
    width: 33.33%;
  }
  
  .cart-sabor-open {
    position: absolute;
    transform: rotateY(180deg);
    backface-visibility: hidden;
    width: 100%;
    background-color: #f6f6f6;
    height: 100%;
    border-radius: 25px;
    z-index: -1;
  }

  .slider-sabores-hs.open-description-sabor .flip-card-sabor{
    transform: rotateY(180deg);
  }

  @media (max-width: 1200px){
    .slider-sabores-hs.open-description-sabor.end-animation .sabor-item{
      display:none;
    }
    .slider-sabores-hs.open-description-sabor.end-animation .cart-sabor-open {
      position: relative;
      transform: inherit;
      z-index: 1
    }

    .slider-sabores-hs.open-description-sabor.end-animation .flip-card-sabor {
      all: unset !important;
    }

     .body-cart-open-sabor{
        height: 320px;
        flex-flow: row wrap;
        overflow: hidden;
     }

     /* .open-description-sabor.end-animation .body-cart-open-sabor{
        height: 390px;
     } */
  
    .body-cart-open-sabor{
      transition: height 1s;
    }
  }

  @media (max-width: 1200px){
    .slider-sabores-hs.open-description-sabor .swiper-slide {
      width: 100%;
    }

    .features-sabor-header {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      padding: 10px 15px;
      align-items: center;
    }
  }

  .body-cart-open-sabor p {
    font-size: 11px;
    line-height: 1.6;
    margin-top: 0;
    font-weight: 400;
  }

  .body-cart-open-sabor {
    padding: 40px 20px 20px;
    display: flex;
    flex-flow: column wrap;
    margin: 0 auto;
  }

  @media(min-width:1200px){
    .body-cart-open-sabor {
      height: 100%;
    }
  }

  .content-body-sabor {
    flex: 1;
  }

  /* .slider-sabores-hs:not(.open-description-sabor) .cart-sabor-open{
    display:none;
  }

  .slider-sabores-hs.open-description-sabor .sabor-item{
    display:none;
  } */

  .slider-sabores-hs.open-description-sabor .flip-card-sabor {
  /* all: unset !important; */
  }

  @media (min-width: 1200px){
    .cal-left {
      display: none;
    }

    .img-header-card {
      margin-left: 0;
      padding-left: 20px;
    }
    
    .header-cart-open {
      background: transparent;
    }
    
    .cart-sabor-open {
      transform: unset;
      backface-visibility: unset;
      position: relative;
      width: 400px;
      margin-left: -45px;
      z-index: 1;
      height: auto;
    }

    .features-sabor-header {
      grid-template-columns: repeat(3, 1fr);
    }
    
    .sabor-item {
      transform: inherit;
      position: relative;
      width: 300px;
    }
    
    .flip-card-sabor {
      display: flex !important;
      transform: unset !important;
      flex-direction: row-reverse !important;
      width: fit-content;
    }
    
    .slider-sabores-hs .swiper-slide {
      width: fit-content;
    }
  }

  .body-cart-open-sabor .previewCartItem-qty {
    margin-top: 0;
  }

  .footer-card .quantity-container {
    justify-content: center;
    align-items: center;
    gap: 5px;
  }

  @media (max-width: 1200px){
    .footer-card .quantity-container {
      flex-flow: column-reverse wrap;
    }
  }

  @media (min-width: 1200px){
    .cart-sabor-open {
      z-index: 0;
      transform: translateX(-50%);
      width: 0;
      margin: 0;
      height: 0;
      opacity: 0;
      animation: all 1s;
    }

    .slider-sabores-hs.open-description-sabor .swiper-slide {
      width: auto;
    }

    .opened .cart-sabor-open {
      width: 500px;
      opacity: 1;
      transform: inherit;
      z-index: 1;
      margin-left: -45px;
      height: auto;
      animation: all 1s;
      display: flex;
      flex-direction: column;
    }

    .features-sabor-header {
      grid-template-columns: repeat(3, 1fr);
      max-width: 100%;
      width: 100%;
    }
  }

  .body-cart-open-sabor .footer-card {
    display: none;
  }

  @media (min-width:1024px){
    .content-body-sabor {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-top: 30px;
    }
  }
