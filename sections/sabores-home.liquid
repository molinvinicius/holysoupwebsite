{% if section.settings.borda-superior %}
  {% render 'borda-superior', cor: section.settings.color-borda-superior %}
{% endif %}
<div class="swiper slider-sabores-hs max-container">
  <div class="header-widget">
    <h3>Conheça todos os <br />nossos sabores</h3>
  </div>
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide">
        <div class="flip-card-sabor" style="--colorCard: {{ block.settings.color }}; --colorFeature: {{ block.settings.color_feature }}">
          <div class="cart-sabor-open">
            <div class="header-cart-open">
              <div class="cal-left">
                <div class="cal-open-header">
                  <span class="kcal-number">{{ block.settings.kcal }}</span>
                  <span>kcal</span>
                  <span>/ a cada 100g</span>
                </div>
              </div>
              <div class="img-header-card"><img loading="lazy" width="75px" height="auto" src="{{ block.settings.embalagem | image_url: width: 75 }}"/></div>
              <div class="features-sabor-header">
                {% if block.settings.label_favoritas %}
                <div class="feature-sabor-header">
                  <div class="icon-sabor">
                    {% render 'icon-favoritas-do-brasil' %}
                  </div>
                  <div class="content-sabor">
                    <span><b>favoritas</b></span>
                    <span>do brasil</span>
                  </div>
                </div>
                {% endif %}
                {% if block.settings.label_vegano %}
                <div class="feature-sabor-header">
                  <div class="icon-sabor">
                    {% render 'icon-vegano' %}
                  </div>
                  <div class="content-sabor">
                    <span><b>vegano</b></span>
                  </div>
                </div>
                {% endif %}
                {% if block.settings.label_animal %}
                <div class="feature-sabor-header">
                  <div class="icon-sabor">
                    {% render 'icon-proteina-animal' %}
                  </div>
                  <div class="content-sabor">
                    <span><b>proteina</b></span>
                    <span>animal</span>
                  </div>
                </div>
                {% endif %}
                {% if block.settings.label_rende %}
                <div class="feature-sabor-header">
                  <div class="icon-sabor">
                    {% render 'icon-rendimento' %}
                  </div>
                  <div class="content-sabor">
                    <span>rende {{ block.settings.porcoes }}</span>
                    <span>porções</span>
                  </div>
                </div>
                {% endif %}
                <div class="feature-sabor-header">
                  <div class="icon-sabor">
                    {% render 'icon-tabela' %}
                  </div>
                  <div class="content-sabor">
                    <span><a tabela-nutri href="{{ block.settings.product.metafields.custom.informa_o_nutricional.value | img_url: '800x' }}" class="tabela-nutri">tabela nutri.</a></span>
                  </div>
                </div>
              </div>
            </div>
            <div class="body-cart-open-sabor">
              <div class="content-body-sabor">
                <p>{{ block.settings.descricao }}</p>
                <p>{{ block.settings.ingredientes }}</p>
              </div>
              {% render 'footer-card-holy', product: block.settings.product %}
            </div>
          </div>
          
          <div class="sabor-item" data-open-sabor-desk data-open-sabor-mobile data-index="{{ forloop.index0 }}">
            <div class="card-sabor">
              <div class="card-sabor-header">
                <h3>{{ block.settings.title }}</h3>
                <a class="conhecer-btn" {% comment %}data-open-sabor-desk data-open=".slider-sabores-hs"{% endcomment %} href="javascript:void(0)">Conhecer <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 30 30" width="512px" height="512px"><path d="M 13 3 C 7.4889971 3 3 7.4889971 3 13 C 3 18.511003 7.4889971 23 13 23 C 15.396508 23 17.597385 22.148986 19.322266 20.736328 L 25.292969 26.707031 A 1.0001 1.0001 0 1 0 26.707031 25.292969 L 20.736328 19.322266 C 22.148986 17.597385 23 15.396508 23 13 C 23 7.4889971 18.511003 3 13 3 z M 13 5 C 17.430123 5 21 8.5698774 21 13 C 21 17.430123 17.430123 21 13 21 C 8.5698774 21 5 17.430123 5 13 C 5 8.5698774 8.5698774 5 13 5 z M 12.984375 7.9863281 A 1.0001 1.0001 0 0 0 12 9 L 12 12 L 9 12 A 1.0001 1.0001 0 1 0 9 14 L 12 14 L 12 17 A 1.0001 1.0001 0 1 0 14 17 L 14 14 L 17 14 A 1.0001 1.0001 0 1 0 17 12 L 14 12 L 14 9 A 1.0001 1.0001 0 0 0 12.984375 7.9863281 z"/></svg></a>
              </div>
              <div class="calorias-preview">
                <span class="qtd-kcal">{{ block.settings.kcal }}</span>
                <span class="medida-kcal">
                  <b>Kcal</b> 
                  <span>/ a cada 100g</span>
                </span>
              </div>
              <div class="foto-sabor">
                <img loading="lazy" width="350px" height="auto" src="{{ block.settings.feature | image_url: width: 350 }}">
              </div>
              <div class="avaliacoes-sabor">
                <div class="konfidency-reviews-multi" data-sku="{{ block.settings.product.id }}" data-v-app> </div>
                {% comment %}
                <div class="star-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 50 50" width="512px" height="512px">    <path d="M10.2,48.6c-0.2,0-0.4-0.1-0.6-0.2c-0.3-0.2-0.5-0.7-0.4-1.1l4.4-16.4L0.4,20.2C0,20-0.1,19.5,0,19.1 c0.1-0.4,0.5-0.7,0.9-0.7l17-0.9l6.1-15.9C24.2,1.3,24.6,1,25,1c0.4,0,0.8,0.3,0.9,0.6l6.1,15.9l17,0.9c0.4,0,0.8,0.3,0.9,0.7 c0.1,0.4,0,0.8-0.3,1.1L36.4,30.9l4.4,16.4c0.1,0.4,0,0.8-0.4,1.1c-0.3,0.2-0.8,0.3-1.1,0L25,39.2l-14.3,9.2 C10.5,48.6,10.4,48.6,10.2,48.6z"/></svg>
                </div>
                <div class="media-avaliacao">
                  <p>4.8</p>
                </div>
                <div class="total-avaliacoes">
                  <b>1.500</b>
                  <span>Avaliações</span>
                </div>
                {% endcomment %}
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="swiper-pagination"></div>
</div>
