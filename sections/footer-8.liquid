  a.btn.btn-footer svg {
    width: 25px;
    height: auto;
    stroke: none;
  }

  .row-footer{
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 3px 0;
  }

  .menu-principal-footer ul {
    list-style: none;
    display: flex;
    gap: 20px;
    padding: 0;
  }

  .menu-principal-footer ul li a {
    font-weight: 400;
    font-size: 14px;
    color: #fff;
  }

  .menu-footer ul {
    padding: 0;
    list-style: none;
  }
  
  .menu-footer ul li a {
    font-weight: 400;
    color: #fff;
    font-size: 13px;
  }
  
  .menu-footer li {
    padding: 3px 0;
  }
  
  .logo-footer {
    width: 33.33%;
