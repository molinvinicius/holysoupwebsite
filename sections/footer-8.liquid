  .logo-footer img {
    width: 160px;
    height: auto;
  }
  
  .menu-principal-footer {width: 33.33%;}
  
  .comprar-loja-fisica {
    width: 33.33%;
  }

  .menu-footer {
    width: 33.33%;
  }

  .buttons-footer {
    width: 33.33%;
    display: flex;
    flex-direction: column;
    gap: 7px;
  }

  .row-copyright ul.list.list-payment {
    list-style: none;
    display: flex;
    gap: 3px;
    padding: 0;
    margin: 0;
  }

  .row-footer.row-copyright {
    text-align: center;
    color: #fff;
  }

  .row-footer.row-copyright .cnpj {
    margin-bottom: 0;
  }

